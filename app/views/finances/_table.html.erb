<div class="table_invoice">
  <table class='table table-striped table-bordered table-hover'>
    <thead>
      <tr class="bg-primary">
        <th class="align_center">Invoice Date</th>
        <th class='align_center'>Name</th>
        <th class='align_center'>Desc</th>
        <th class='align_center'>Finance Category</th>
        <th class='align_center'>Amount</th>
      </tr>
    </thead>
    <tbody>
      <% @finances.each do |finance| %>
      <tr>
        <td class="align_center">
          <%= finance.expense_date %>
        </td>
        <td class="align_center">
          <%= finance.name %>
        </td>
        <td class="align_center">
          <%= finance.desc %>
        </td>
        <td class="align_center">
          <%= finance.category %>
        </td>
        <td class="align_center">
          <%= finance.amount %>
          <%#= finance.total_income%>
        </td>
      </tr>
      <% end %>
    </tbody>
    <tfoot>
    </tfoot>
  </table>
</div>
<div class="flickr_pagination pagination-margin">
  <%= will_paginate @finances, container: false %>
</div>

<!-- Modal -->
<div class="modal fade" id="ModalAddCollection" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Collection</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="errors_invoice">
        </div>
        <%#= render "form_collection" %>
      </div>
    </div>
  </div>
</div>
